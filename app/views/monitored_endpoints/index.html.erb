<% content_for :title, "Monitored endpoints" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Monitored endpoints</h1>
    <%= link_to "New monitored endpoint", new_monitored_endpoint_path, class: "btn btn-primary" %>
  </div>

  <div class="breadcrumbs text-sm">
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li>Monitored endpoints</li>
    </ul>
  </div>

  <div id="monitored_endpoints" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @monitored_endpoints.any? %>
      <% @monitored_endpoints.each do |monitored_endpoint| %>
        <div class="">
          <h2 class="font-bold text-xl">
            <%= link_to monitored_endpoint.title, monitored_endpoint %>
          </h2>
          <%= render monitored_endpoint %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No monitored endpoints found.</p>
    <% end %>
  </div>
</div>
